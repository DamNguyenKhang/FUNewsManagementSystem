@model IEnumerable<BusinessObject.Entities.NewsArticle>
@{
    ViewData["Title"] = "Home Page";
    var featured = Model.FirstOrDefault();
    var otherNews = Model.Skip(1);
    const string defaultImage = "https://lh3.googleusercontent.com/aida-public/AB6AXuBdi3IT-JhoSBjYQhj8O_CyqAOH4bMRWXVzWj1odGuGMkw62ak11v6HxE--TiLf48TFW8OYUDC49cK-YqowXU-EeDhYfrbAJt-WW1FNXg74BhgsciIUM8RseHLRH_6VPn3fhTVBbvm4-3VreLVmWWxviBZ69cg9Df2MWpNB4ytzJRJn24KG-Ja0ne3XcUxZ5pZb-hE9D1O4guk4DyviF33vaT-Cyzm1IT1Z-fM9amccHB1sL3RvBrdTeyvs1nfIODZogs0Rn0-NuYa5";
}

<div class="flex flex-col gap-8 mb-12">
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
        <div>
            <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight text-gray-900 mb-2">Latest Updates</h1>
            <p class="text-text-secondary text-lg max-w-2xl">Discover the latest news, academic achievements, and upcoming events at FPT University.</p>
        </div>
        <div class="text-sm text-text-secondary font-medium">Showing <span class="text-gray-900 font-bold">1-@Model.Count()</span> of <span class="text-gray-900 font-bold">@Model.Count()</span> articles</div>
    </div>
    <form method="get" asp-action="Index" class="bg-white p-4 rounded-xl shadow-sm border border-gray-100 flex flex-col lg:flex-row gap-4 items-center justify-between">
        <input type="hidden" name="categoryId" value="@ViewBag.CategoryId" />
        <div class="relative w-full lg:w-96 group">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400 group-focus-within:text-primary transition-colors">
                <span class="material-symbols-outlined">search</span>
            </div>
            <input name="search" value="@ViewBag.Search" class="block w-full pl-10 pr-3 py-2.5 border border-gray-200 rounded-lg leading-5 bg-gray-50 placeholder-gray-400 focus:outline-none focus:bg-white focus:ring-1 focus:ring-primary focus:border-primary sm:text-sm transition-all" placeholder="Search for news, topics..." type="text" onchange="this.form.submit()"/>
        </div>
        <div class="flex flex-wrap items-center gap-3 w-full lg:w-auto overflow-x-auto pb-2 lg:pb-0 scrollbar-hide">
            <a asp-action="Index" asp-route-search="@ViewBag.Search" 
               class="whitespace-nowrap px-4 py-2 rounded-lg font-medium text-sm transition-all @(ViewBag.CategoryId == null ? "bg-primary text-white shadow-sm" : "bg-gray-100 text-gray-600 hover:bg-gray-200 hover:text-gray-900")">
                All News
            </a>
            @if (ViewBag.Categories != null)
            {
                foreach (var cat in (IEnumerable<BusinessObject.Entities.Category>)ViewBag.Categories)
                {
                    <a asp-action="Index" asp-route-categoryId="@cat.Id" asp-route-search="@ViewBag.Search"
                       class="whitespace-nowrap px-4 py-2 rounded-lg font-medium text-sm transition-all @(ViewBag.CategoryId == cat.Id ? "bg-primary text-white shadow-sm" : "bg-gray-100 text-gray-600 hover:bg-gray-200 hover:text-gray-900")">
                        @cat.CategoryName
                    </a>
                }
            }
        </div>
    </form>
</div>

@if (featured != null)
{
    @* Featured - Clicking goes to detail *@
    <div class="mb-12 cursor-pointer">
        <a asp-controller="Home" asp-action="Details" asp-route-id="@featured.Id" class="block group relative flex flex-col md:flex-row bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 border border-gray-100">
            <div class="md:w-2/3 relative overflow-hidden">
                <div class="absolute top-4 left-4 z-10"><span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-bold bg-primary text-white shadow-sm uppercase tracking-wide">Featured</span></div>
                <div class="w-full h-64 md:h-full bg-gray-200 bg-cover bg-center transform group-hover:scale-105 transition-transform duration-700" 
                     style="background-image: url('@(string.IsNullOrEmpty(featured.NewsArticleImage) ? defaultImage : featured.NewsArticleImage)')"></div>
            </div>
            <div class="md:w-1/3 p-6 md:p-8 flex flex-col justify-center">
                <div class="flex items-center gap-2 mb-3">
                    <span class="material-symbols-outlined text-primary text-sm">calendar_today</span>
                    <span class="text-sm text-text-secondary font-medium">@(featured.CreatedDate?.ToString("MMMM dd, yyyy") ?? "N/A")</span>
                </div>
                <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4 leading-tight group-hover:text-primary transition-colors">@featured.NewsTitle</h2>
                <p class="text-gray-600 mb-6 line-clamp-3">@featured.Headline</p>
                <div class="mt-auto"><span class="inline-flex items-center text-primary font-bold hover:underline gap-1 group/link">Read Full Story <span class="material-symbols-outlined text-lg transition-transform group-hover/link:translate-x-1">arrow_forward</span></span></div>
            </div>
        </a>
    </div>
}

@* Grid *@
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    @foreach (var article in otherNews)
    {
        <article class="group relative flex flex-col bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100 overflow-hidden h-full">
            <a asp-controller="Home" asp-action="Details" asp-route-id="@article.Id" class="absolute inset-0 z-0"></a>
            <div class="relative overflow-hidden aspect-video">
                @if (article.Category != null)
                {
                    <div class="absolute top-3 left-3 z-10">
                        <span class="inline-block px-2.5 py-1 rounded bg-white/90 backdrop-blur text-primary text-xs font-bold uppercase tracking-wide shadow-sm">@article.Category.CategoryName</span>
                    </div>
                }
                <div class="w-full h-full bg-gray-200 bg-cover bg-center transform group-hover:scale-110 transition-transform duration-500" 
                     style="background-image: url('@(string.IsNullOrEmpty(article.NewsArticleImage) ? defaultImage : article.NewsArticleImage)')"></div>
            </div>
            <div class="p-5 flex flex-col flex-grow relative z-10 pointer-events-none">
                <div class="flex items-center gap-2 mb-2 text-xs text-text-secondary">
                    <span class="flex items-center gap-1">
                        <span class="material-symbols-outlined text-[14px]">schedule</span> 
                        @(article.CreatedDate?.ToString("MMM dd, yyyy") ?? "N/A")
                    </span>
                </div>
                <h3 class="text-lg font-bold text-gray-900 mb-2 leading-snug group-hover:text-primary transition-colors">@article.NewsTitle</h3>
            </div>
        </article>
    }
</div>
