@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<header class="h-16 bg-surface-light border-b border-gray-200 flex items-center justify-between px-6 shrink-0 z-10">
    <div class="flex items-center gap-2 text-sm"><span class="text-text-secondary">Home</span><span class="text-gray-300">/</span><span class="font-medium text-gray-900">Dashboard</span></div>
    <div class="flex items-center gap-4">
        <span class="material-symbols-outlined text-gray-400">notifications</span>
    </div>
</header>
<div class="flex-1 overflow-y-auto p-6 md:p-8 bg-background-light">
    <div class="max-w-7xl mx-auto space-y-8">
        <div><h2 class="text-2xl font-bold text-gray-900">Dashboard Overview</h2><p class="text-text-secondary mt-1">Welcome back, here's what's happening with your news system today.</p></div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            @* Cards *@
            <div class="bg-surface-light p-6 rounded-xl border border-gray-200 shadow-soft flex items-start justify-between">
                <div><p className="text-sm font-medium text-text-secondary">Total Accounts</p><h3 className="text-3xl font-bold text-gray-900 mt-2">1,240</h3></div>
                <div class="h-12 w-12 rounded-lg bg-blue-50 text-blue-600 flex items-center justify-center"><span className="material-symbols-outlined text-2xl">group</span></div>
            </div>
            <div class="bg-surface-light p-6 rounded-xl border border-gray-200 shadow-soft flex items-start justify-between">
                <div><p className="text-sm font-medium text-text-secondary">Total News</p><h3 className="text-3xl font-bold text-gray-900 mt-2">856</h3></div>
                <div class="h-12 w-12 rounded-lg bg-orange-50 text-primary flex items-center justify-center"><span className="material-symbols-outlined text-2xl">article</span></div>
            </div>
            <div class="bg-surface-light p-6 rounded-xl border border-gray-200 shadow-soft flex items-start justify-between">
                <div><p className="text-sm font-medium text-text-secondary">Active News</p><h3 className="text-3xl font-bold text-gray-900 mt-2">342</h3></div>
                <div class="h-12 w-12 rounded-lg bg-green-50 text-green-600 flex items-center justify-center"><span className="material-symbols-outlined text-2xl">check_circle</span></div>
            </div>
        </div>
        @* Recent Activity *@
        <div class="bg-surface-light rounded-xl border border-gray-200 shadow-soft overflow-hidden">
            <div class="p-6 border-b border-gray-100"><h3 className="text-lg font-bold text-gray-900">Recent System Activity</h3></div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-text-secondary">
                    <thead class="bg-gray-50 text-xs uppercase font-semibold text-gray-500"><tr><th class="px-6 py-4">Date</th><th class="px-6 py-4">User</th><th class="px-6 py-4">Activity</th><th class="px-6 py-4">Status</th></tr></thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr><td class="px-6 py-4">Oct 24, 2023</td><td class="px-6 py-4 font-medium text-gray-900">Nguyen Van A</td><td class="px-6 py-4">Created new article "Graduation Ceremony"</td><td class="px-6 py-4"><span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Published</span></td></tr>
                        <tr><td class="px-6 py-4">Oct 24, 2023</td><td class="px-6 py-4 font-medium text-gray-900">Tran Thi B</td><td class="px-6 py-4">Updated "Scholarship Opportunities"</td><td class="px-6 py-4"><span class="px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">Pending</span></td></tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
