@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    
    var totalAccounts = ViewBag.TotalAccounts ?? 0;
    var totalNews = ViewBag.TotalNews ?? 0;
    var activeNews = ViewBag.ActiveNews ?? 0;
    var newsPercentChange = ViewBag.NewsPercentChange ?? 0.0;
    var accountsPercentChange = ViewBag.AccountsPercentChange ?? 0.0;
}

<header class="h-16 bg-white border-b border-gray-200 flex items-center justify-between px-6 shrink-0 z-10 sticky top-0">
    <div class="flex items-center gap-2 text-sm">
        <span class="text-text-secondary">Admin</span>
        <span class="text-gray-300">/</span>
        <span class="font-medium text-gray-900">Dashboard</span>
    </div>
    <div class="flex items-center gap-4">
        <span class="material-symbols-outlined text-gray-400">notifications</span>
    </div>
</header>

<div class="flex-1 overflow-y-auto p-6 md:p-8 bg-background-light">
    <div class="max-w-7xl mx-auto space-y-8">
        <div>
            <h2 class="text-3xl font-bold text-text-main tracking-tight font-display">Dashboard Overview</h2>
            <p class="text-text-secondary mt-1">Welcome back, here's what's happening with your news system today.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            @* Total Accounts Card *@
            <div class="bg-white p-6 rounded-2xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow flex items-start justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Total Accounts</p>
                    <h3 class="text-3xl font-bold text-text-main mt-2">@string.Format("{0:N0}", totalAccounts)</h3>
                    <div class="flex items-center gap-1 mt-3">
                        <span class="flex items-center text-xs font-bold @(accountsPercentChange >= 0 ? "text-green-600 bg-green-50" : "text-red-600 bg-red-50") px-1.5 py-0.5 rounded">
                            <span class="material-symbols-outlined text-[14px]">@(accountsPercentChange >= 0 ? "arrow_upward" : "arrow_downward")</span>
                            @Math.Abs(accountsPercentChange)%
                        </span>
                    </div>
                </div>
                <div class="h-12 w-12 rounded-xl bg-blue-50 text-blue-600 flex items-center justify-center">
                    <span class="material-symbols-outlined text-2xl filled">group</span>
                </div>
            </div>

            @* Total News Card *@
            <div class="bg-white p-6 rounded-2xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow flex items-start justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Total News</p>
                    <h3 class="text-3xl font-bold text-text-main mt-2">@string.Format("{0:N0}", totalNews)</h3>
                    <div class="flex items-center gap-1 mt-3">
                        <span class="flex items-center text-xs font-bold @(newsPercentChange >= 0 ? "text-green-600 bg-green-50" : "text-red-600 bg-red-50") px-1.5 py-0.5 rounded">
                            <span class="material-symbols-outlined text-[14px]">@(newsPercentChange >= 0 ? "arrow_upward" : "arrow_downward")</span>
                            @Math.Abs(newsPercentChange).ToString("F1")%
                        </span>
                    </div>
                </div>
                <div class="h-12 w-12 rounded-xl bg-orange-50 text-primary flex items-center justify-center">
                    <span class="material-symbols-outlined text-2xl filled">article</span>
                </div>
            </div>

            @* Active News Card *@
            <div class="bg-white p-6 rounded-2xl border border-gray-200 shadow-sm hover:shadow-md transition-shadow flex items-start justify-between">
                <div>
                    <p class="text-sm font-medium text-text-secondary">Active News</p>
                    <h3 class="text-3xl font-bold text-text-main mt-2">@string.Format("{0:N0}", activeNews)</h3>
                    <div class="flex items-center gap-1 mt-3">
                        <div class="h-1.5 w-1.5 rounded-full bg-green-500 animate-pulse"></div>
                        <span class="text-[11px] text-text-secondary">Currently published</span>
                    </div>
                </div>
                <div class="h-12 w-12 rounded-xl bg-green-50 text-green-600 flex items-center justify-center">
                    <span class="material-symbols-outlined text-2xl filled">check_circle</span>
                </div>
            </div>
        </div>

        @* Recent Activity *@
        <div class="bg-white rounded-2xl border border-gray-200 shadow-sm overflow-hidden">
            <div class="p-6 border-b border-gray-100 flex items-center justify-between">
                <h3 class="text-lg font-bold text-text-main">Recent System Activity</h3>
                <button class="text-xs font-bold text-primary hover:text-primary-dark transition-colors">View All</button>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm text-text-secondary">
                    <thead class="bg-gray-50 text-xs uppercase font-bold text-gray-500">
                        <tr>
                            <th class="px-6 py-4">Date</th>
                            <th class="px-6 py-4">User</th>
                            <th class="px-6 py-4">Activity</th>
                            <th class="px-6 py-4">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr class="hover:bg-gray-50/50 transition-colors">
                            <td class="px-6 py-4">Oct 24, 2023</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <div class="h-6 w-6 rounded-full bg-primary/10 flex items-center justify-center text-[10px] text-primary font-bold">NV</div>
                                    <span class="font-bold text-text-main">Nguyen Van A</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">Created new article "Graduation Ceremony"</td>
                            <td class="px-6 py-4">
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-green-50 text-green-700 border border-green-100">Published</span>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50/50 transition-colors">
                            <td class="px-6 py-4">Oct 24, 2023</td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <div class="h-6 w-6 rounded-full bg-blue-100 flex items-center justify-center text-[10px] text-blue-600 font-bold">TT</div>
                                    <span class="font-bold text-text-main">Tran Thi B</span>
                                </div>
                            </td>
                            <td class="px-6 py-4">Updated "Scholarship Opportunities"</td>
                            <td class="px-6 py-4">
                                <span class="px-2.5 py-0.5 rounded-full text-xs font-bold bg-amber-50 text-amber-700 border border-amber-100">Pending</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
