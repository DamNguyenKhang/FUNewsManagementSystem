<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Staff - FUNewsManagementSystemMVC</title>
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <!-- Google Fonts: Lexend -->
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet"/>
    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">
    
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#f37120",
                        "primary-dark": "#d65a0e",
                        "primary-light": "#fff0e6",
                        "background-light": "#f8f9fa",
                        "background-dark": "#221710",
                        "text-main": "#1c130d",
                        "text-secondary": "#6b7280",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"],
                        "body": ["Lexend", "sans-serif"],
                    },
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        .material-symbols-outlined.filled {
            font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
        body { font-family: 'Lexend', sans-serif; }
    </style>
</head>
<body class="bg-background-light text-text-main antialiased min-h-screen flex overflow-hidden">
    <aside class="flex w-64 flex-col border-r border-gray-200 bg-white min-h-screen fixed left-0 top-0 bottom-0 z-50 h-full">
        <div class="flex h-full flex-col justify-between p-4">
            <div class="flex flex-col gap-6">
                <!-- Brand -->
                <div class="flex items-center gap-3 px-2">
                    <div class="h-10 w-10 rounded-full bg-primary/10 flex items-center justify-center text-primary">
                        <span class="material-symbols-outlined filled">badge</span>
                    </div>
                    <div class="flex flex-col">
                        <h1 class="text-text-main text-base font-bold leading-tight">FPT Staff</h1>
                        <p class="text-text-secondary text-xs font-normal">Staff Portal</p>
                    </div>
                </div>
                <!-- Navigation -->
                <nav class="flex flex-col gap-1">
                    <a asp-controller="Staff" asp-action="Dashboard" class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-text-secondary hover:bg-gray-50 hover:text-primary transition-colors group @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "bg-primary/10 text-primary" : "")">
                        <span class="material-symbols-outlined @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "filled" : "text-gray-400 group-hover:text-primary") transition-colors">dashboard</span>
                        <span class="text-sm font-medium @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "font-semibold" : "")">Dashboard</span>
                    </a>
                    <a asp-controller="Staff" asp-action="News" class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition-colors group @(ViewContext.RouteData.Values["Action"].ToString() == "News" ? "bg-primary/10 text-primary" : "text-text-secondary hover:bg-gray-50 hover:text-primary")">
                        <span class="material-symbols-outlined @(ViewContext.RouteData.Values["Action"].ToString() == "News" ? "filled" : "text-gray-400 group-hover:text-primary") transition-colors">newspaper</span>
                        <span class="text-sm font-medium @(ViewContext.RouteData.Values["Action"].ToString() == "News" ? "font-semibold" : "")">Manage News</span>
                    </a>
                    <a asp-controller="Staff" asp-action="Categories" class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition-colors group @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" ? "bg-primary/10 text-primary" : "text-text-secondary hover:bg-gray-50 hover:text-primary")">
                        <span class="material-symbols-outlined @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" ? "filled" : "text-gray-400 group-hover:text-primary") transition-colors">folder</span>
                        <span class="text-sm font-medium @(ViewContext.RouteData.Values["Action"].ToString() == "Categories" ? "font-semibold" : "")">Categories</span>
                    </a>
                    <a asp-controller="Staff" asp-action="History" class="flex items-center gap-3 rounded-lg px-3 py-2.5 transition-colors group @(ViewContext.RouteData.Values["Action"].ToString() == "History" ? "bg-primary/10 text-primary" : "text-text-secondary hover:bg-gray-50 hover:text-primary")">
                        <span class="material-symbols-outlined @(ViewContext.RouteData.Values["Action"].ToString() == "History" ? "filled" : "text-gray-400 group-hover:text-primary") transition-colors">history</span>
                        <span class="text-sm font-medium @(ViewContext.RouteData.Values["Action"].ToString() == "History" ? "font-semibold" : "")">History</span>
                    </a>
                </nav>
            </div>
            <!-- Footer Actions -->
            <div class="flex flex-col gap-2 border-t border-gray-100 pt-4">
                <a asp-controller="Auth" asp-action="Logout" class="flex items-center gap-3 rounded-lg px-3 py-2.5 text-text-secondary hover:bg-red-50 hover:text-red-600 transition-colors group w-full text-left">
                    <span class="material-symbols-outlined text-gray-400 group-hover:text-red-500 transition-colors">logout</span>
                    <span class="text-sm font-medium">Logout</span>
                </a>
                <a asp-controller="Staff" asp-action="Profile" class="mt-2 flex items-center gap-3 px-3 py-2 rounded-xl hover:bg-gray-50 transition-colors group">
                    <div class="h-8 w-8 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold border border-primary/20 group-hover:bg-primary group-hover:text-white transition-all">
                        @(Context.Session.GetString("AccountName")?[0].ToString().ToUpper() ?? "S")
                    </div>
                    <div class="flex flex-col overflow-hidden">
                        <span class="text-xs font-bold text-text-main truncate group-hover:text-primary transition-colors">@Context.Session.GetString("AccountName")</span>
                        <span class="text-[10px] text-text-secondary truncate">@Context.Session.GetString("AccountEmail")</span>
                    </div>
                </a>
            </div>
        </div>
    </aside>
    
    <main class="flex-1 ml-64 flex flex-col h-screen relative bg-background-light overflow-y-auto">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

