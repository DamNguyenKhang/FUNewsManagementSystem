<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUNewsManagementSystemMVC</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <!-- Google Fonts: Lexend -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
    <!-- Material Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet">

    <!-- Theme Configuration -->
    <script>
        tailwind.config = {
            darkMode: "class",
            theme: {
                extend: {
                    colors: {
                        "primary": "#f37120",
                        "primary-dark": "#d65d12",
                        "primary-light": "#fff1e6",
                        "background-light": "#f8f7f5",
                        "background-dark": "#221710",
                        "surface-light": "#ffffff",
                        "surface-dark": "#2d2d2d",
                        "text-main": "#1c130d",
                        "text-secondary": "#6b5c53",
                        "neutral-border": "#e8d8ce",
                    },
                    fontFamily: {
                        "display": ["Lexend", "sans-serif"],
                        "body": ["Lexend", "sans-serif"],
                    },
                    borderRadius: {"DEFAULT": "0.5rem", "lg": "0.75rem", "xl": "1rem", "full": "9999px"},
                },
            },
        }
    </script>
    <style>
        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }

            .material-symbols-outlined.filled {
                font-variation-settings: 'FILL' 1, 'wght' 400, 'GRAD' 0, 'opsz' 24;
            }
        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
            height: 8px;
        }

        ::-webkit-scrollbar-track {
            background: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background: #d1d5db;
            border-radius: 4px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: #9ca3af;
            }

        body {
            font-family: 'Lexend', sans-serif;
        }
    </style>
</head>
<body class="bg-background-light dark:bg-background-dark text-text-main antialiased flex flex-col min-h-screen">
    <header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100 shadow-sm">
        <div class="max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-20">
                <a class="flex items-center gap-3 cursor-pointer" asp-area="" asp-controller="Home" asp-action="Index">
                    <div class="w-10 h-10 rounded-lg overflow-hidden flex items-center justify-center">
                        <img src="~/assets/images/fpt-logo.jpg" alt="FPT Logo" class="w-full h-full object-cover" asp-append-version="true" />
                    </div>
                    <div class="flex flex-col">
                        <span class="font-bold text-xl tracking-tight leading-none text-gray-900">FPT University</span>
                        <span class="text-xs font-medium text-primary tracking-wide uppercase mt-0.5">News Hub</span>
                    </div>
                </a>
                <nav class="hidden md:flex items-center gap-8">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="text-primary font-bold transition-colors">Home</a>
                    <a class="text-gray-600 hover:text-primary font-medium transition-colors" href="#">News</a>
                    <a class="text-gray-600 hover:text-primary font-medium transition-colors" href="#">Events</a>
                    <a class="text-gray-600 hover:text-primary font-medium transition-colors" href="#">About</a>
                </nav>
                <div class="flex items-center gap-4">
                    <button class="hidden md:flex items-center justify-center p-2 text-gray-500 hover:text-primary hover:bg-orange-50 rounded-full transition-colors">
                        <span class="material-symbols-outlined">search</span>
                    </button>
                    @if (Context.Session.GetString("AccountId") != null)
                    {
                        <div class="flex items-center gap-3 pl-4 border-l border-gray-100">
                            <div class="flex flex-col items-end hidden sm:flex">
                                <span class="text-sm font-bold text-gray-900 leading-none">@Context.Session.GetString("AccountName")</span>
                                <span class="text-[10px] font-medium text-primary uppercase tracking-wider mt-1">@Context.Session.GetString("Role")</span>
                            </div>
                            <div class="group relative">
                                <button class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold border border-primary/20 hover:bg-primary hover:text-white transition-all">
                                    @(Context.Session.GetString("AccountName")?[0].ToString().ToUpper() ?? "U")
                                </button>
                                <div class="absolute right-0 top-full pt-2 w-56 hidden group-hover:block z-50">
                                    <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 py-2 overflow-hidden">
                                        <div class="px-4 py-3 border-b border-gray-50 bg-gray-50/50">
                                            <p class="text-sm font-bold text-gray-900">@Context.Session.GetString("AccountName")</p>
                                            <p class="text-[10px] text-text-secondary truncate">@Context.Session.GetString("AccountEmail")</p>
                                        </div>
                                        <div class="py-1">
                                            @if (Context.Session.GetString("Role") == "Staff")
                                            {
                                                <a asp-controller="Staff" asp-action="Dashboard" class="flex items-center gap-3 px-4 py-2.5 text-sm text-gray-600 hover:bg-primary/5 hover:text-primary transition-colors">
                                                    <span class="material-symbols-outlined text-[20px]">dashboard</span>
                                                    Staff Dashboard
                                                </a>
                                                <a asp-controller="Staff" asp-action="Profile" class="flex items-center gap-3 px-4 py-2.5 text-sm text-gray-600 hover:bg-primary/5 hover:text-primary transition-colors">
                                                    <span class="material-symbols-outlined text-[20px]">person</span>
                                                    My Profile
                                                </a>
                                            }
                                            @if (Context.Session.GetString("Role") == "Admin")
                                            {
                                                <a asp-controller="Admin" asp-action="Dashboard" class="flex items-center gap-3 px-4 py-2.5 text-sm text-gray-600 hover:bg-primary/5 hover:text-primary transition-colors">
                                                    <span class="material-symbols-outlined text-[20px]">admin_panel_settings</span>
                                                    Admin Dashboard
                                                </a>
                                            }
                                        </div>
                                        <div class="border-t border-gray-50 pt-1">
                                            <a asp-controller="Auth" asp-action="Logout" class="flex items-center gap-3 px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 transition-colors">
                                                <span class="material-symbols-outlined text-[20px]">logout</span>
                                                Logout
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="hidden md:flex bg-primary hover:bg-primary-dark text-white px-5 py-2.5 rounded-lg font-semibold text-sm transition-all shadow-md shadow-orange-200">
                            Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="flex-grow w-full max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-12">
        @RenderBody()
    </main>

    <footer class="bg-gray-900 text-white pt-16 pb-8 border-t border-gray-800 mt-auto">
        <div class="max-w-[1280px] mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 mb-12">
                <!-- Brand -->
                <div class="col-span-1 lg:col-span-1">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 rounded-lg overflow-hidden flex items-center justify-center">
                            <img src="~/assets/images/fpt-logo.jpg" alt="FPT Logo" class="w-full h-full object-cover" asp-append-version="true" />
                        </div>
                        <span class="font-bold text-xl tracking-tight">FPT University</span>
                    </div>
                    <p class="text-gray-400 text-sm leading-relaxed mb-6">
                        Leading the way in technology and business education. Fostering innovation and global citizenship in every student.
                    </p>
                    <div class="flex gap-4">
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-800 hover:bg-primary transition-colors text-white" href="#">
                            <svg class="w-4 h-4" fill="currentColor" viewbox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path></svg>
                        </a>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-800 hover:bg-primary transition-colors text-white" href="#">
                            <svg class="w-4 h-4" fill="currentColor" viewbox="0 0 24 24"><path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.84 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"></path></svg>
                        </a>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-800 hover:bg-primary transition-colors text-white" href="#">
                            <svg class="w-4 h-4" fill="currentColor" viewbox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"></path></svg>
                        </a>
                    </div>
                </div>
                <!-- Quick Links -->
                <div>
                    <h4 class="text-lg font-bold mb-6 text-white">Quick Links</h4>
                    <ul class="space-y-3 text-sm text-gray-400">
                        <li><a class="hover:text-primary transition-colors" href="#">Undergraduate Programs</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Graduate Programs</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">International Admissions</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Scholarships</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Campus Map</a></li>
                    </ul>
                </div>
                <!-- Information -->
                <div>
                    <h4 class="text-lg font-bold mb-6 text-white">Information</h4>
                    <ul class="space-y-3 text-sm text-gray-400">
                        <li><a class="hover:text-primary transition-colors" href="#">About Us</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">News &amp; Events</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Contact Us</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Privacy Policy</a></li>
                        <li><a class="hover:text-primary transition-colors" href="#">Terms of Use</a></li>
                    </ul>
                </div>
                <!-- Contact -->
                <div>
                    <h4 class="text-lg font-bold mb-6 text-white">Contact Us</h4>
                    <ul class="space-y-4 text-sm text-gray-400">
                        <li class="flex items-start gap-3">
                            <span class="material-symbols-outlined text-primary mt-0.5">location_on</span>
                            <span>Khu Cong Nghe Cao Hoa Lac, Km29 Dai Lo Thang Long, Hanoi, Vietnam</span>
                        </li>
                        <li class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-primary">phone</span>
                            <span>+84 (24) 7300 1866</span>
                        </li>
                        <li class="flex items-center gap-3">
                            <span class="material-symbols-outlined text-primary">mail</span>
                            <span>daihocfpt@fpt.edu.vn</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="border-t border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500">
                <p>© 2023 FPT University. All rights reserved.</p>
                <div class="mt-4 md:mt-0">
                    Designed for Education
                </div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
